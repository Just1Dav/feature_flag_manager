---
import { ArrowLeft } from '@lucide/astro';

interface Props {
  showBackButton: boolean;
  path?: string;
  buttonText?: string;
  name: string;
  description?: string;
}

const { showBackButton, path, buttonText, name, description } = Astro.props;
---

<div class="space-y-4">
  {
    showBackButton && (
      <a
        href={path}
        class="text-muted-foreground group hover:text-primary flex w-fit items-center text-sm transition-colors">
        <ArrowLeft class="hover:text-primary mr-2 h-4 w-4 transition-transform group-hover:-translate-x-1" />
        {buttonText}
      </a>
    )
  }

  <div class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">{name}</h1>
      <p class="text-muted-foreground mt-1">{description}</p>
    </div>
  </div>
</div>
