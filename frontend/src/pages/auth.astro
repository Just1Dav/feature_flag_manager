---
import AuthLayout from '@/layouts/auth.astro';
import '../styles/global.css';
import { Flag } from '@lucide/astro';
import { AuthForm } from '@/components/react/auth/AuthForm';
---

<AuthLayout title="Acessar">
  <div class="bg-background flex min-h-screen items-center justify-center p-4">
    <div class="animate-fade-in w-full max-w-md">
      <div class="mb-8 flex flex-col items-center">
        <div class="bg-primary mb-4 flex h-14 w-14 items-center justify-center rounded-xl">
          <Flag class="text-primary-foreground h-8 w-8" />
        </div>
        <h1 class="text-2xl font-bold">FlagMaster</h1>
        <p class="text-muted-foreground mt-1">Gerencie suas feature flags</p>
      </div>
      <AuthForm client:load />
    </div>
  </div>
</AuthLayout>
