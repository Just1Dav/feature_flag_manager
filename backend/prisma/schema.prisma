generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]

  @@map("users")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  environments Environment[]

  // Garantia que um usuário não pode ter dois projetos com o mesmo nome.
  @@unique([userId, name])
  @@map("projects")
}

model Environment {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  featureFlags FeatureFlag[]

  // Garantindo que dentro de um projeto, não existam dois ambientes com o mesmo nome.
  @@unique([projectId, name])
  @@map("environments")
}

model FeatureFlag {
  id          String   @id @default(uuid())
  name        String
  description String?
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  environmentId String
  environment   Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  // Garantindo que dentro de um ambiente, não existam dois feature flags com o mesmo nome.
  @@unique([environmentId, name])
  @@map("feature_flags")
}
